# Copy this file to terraform.tfvars and fill in your values
# DO NOT commit terraform.tfvars to git (it's in .gitignore)

aws_region        = "us-east-1"
project_name      = "testcontainers"
environment       = "dev"
availability_zone = "us-east-1a"

# VPC Configuration
vpc_cidr            = "10.0.0.0/16"
public_subnet_cidr  = "10.0.1.0/24"
private_subnet_cidr = "10.0.2.0/24"

# EC2 Configuration
instance_type = "t3.medium"

# GitHub Configuration
github_repo_url      = "https://github.com/YOUR_ORG/YOUR_REPO"
github_runner_name   = "aws-ec2-runner-dev"
github_runner_labels = ["self-hosted", "aws", "linux", "docker", "dev"]

# GitHub OIDC Configuration (required for secure authentication)
github_org             = "YOUR_ORG_OR_USERNAME"
github_repo            = "YOUR_REPO_NAME"
terraform_state_bucket = "YOUR_TERRAFORM_STATE_BUCKET"
terraform_lock_table   = "YOUR_TERRAFORM_LOCK_TABLE"

# GitHub runner token is passed via environment variable or GitHub Actions
# export TF_VAR_github_runner_token="YOUR_TOKEN"
